<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="#FFFFFFFF"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/winad_progressBar_Layout" android:layout_height="fill_parent"
		android:layout_weight="1.0" android:visibility="visible"
		android:gravity="center_vertical|center_horizontal">
		<ProgressBar android:layout_width="31dip"
			android:layout_height="32dip" android:layout_gravity="center" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/winad_errorNotice_Layout" android:layout_height="fill_parent"
		android:layout_weight="1.0" android:gravity="center_vertical|center_horizontal"
		android:visibility="gone">
		<TextView android:id="@+id/winad_errorNotice_TextView"
			android:visibility="visible" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center" />
	</LinearLayout>


	<ListView android:id="@+id/winad_adListView"
		android:layout_weight="1.0"
		android:fadingEdge="none" android:visibility="gone"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:cacheColorHint="#00000000" android:scrollingCache="false"
		android:divider="@null"
		android:scrollbarAlwaysDrawVerticalTrack="false"
		android:fastScrollEnabled="true" android:listSelector="@drawable/winad_offer_list_bg" />

</LinearLayout> 