<?xml version="1.0" encoding="UTF-8"?>
<!-- 下载软件时，通知栏里面的下载提示 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical" android:background="@android:drawable/status_bar_item_app_background" 
	android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:id="@+id/exchange_app" android:orientation="vertical"  
        	android:paddingTop="8.0dip" android:focusable="true" android:clickable="true" 
        	android:layout_width="40.0dip" android:layout_height="fill_parent">
            <ImageView android:id="@+id/winad_appIcon" android:layout_gravity="center"  
            	android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:id="@+id/winad_progress_text" android:textSize="14.0dip" 
            	android:textColor="#ff000000" android:layout_gravity="center_horizontal"  
            	android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
        </LinearLayout>
        <RelativeLayout android:id="@+id/winad_app" android:orientation="vertical"  
        	android:focusable="true" android:clickable="true" android:layout_width="fill_parent" 
        	android:layout_height="fill_parent">
            <LinearLayout android:id="@+id/winad_notification" android:orientation="horizontal"  
            	android:paddingTop="10.0dip" android:focusable="true" android:clickable="true" 
            	android:layout_width="fill_parent" android:layout_height="wrap_content" 
            	android:layout_alignParentTop="true">
                <TextView android:id="@+id/winad_title" android:textSize="15.0dip" 
                	android:textColor="#ff000000"  android:paddingLeft="2.0dip" 
                	android:layout_width="wrap_content" android:layout_height="wrap_content" 
                	android:singleLine="true" />
            </LinearLayout>
            <ProgressBar android:id="@+id/winad_progress_bar" android:paddingRight="25.0dip" 
            	android:paddingBottom="8.0dip" android:layout_width="fill_parent" 
            	android:layout_height="wrap_content" android:layout_alignParentBottom="true" 
            	style="?android:progressBarStyleHorizontal" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>