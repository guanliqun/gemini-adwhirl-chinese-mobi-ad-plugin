<?xml version="1.0" encoding="UTF-8"?>
<!-- ListView中AD Item的布局文件 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offer_adItem_LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="72dip"
    android:background="@drawable/winad_offer_list_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/offer_adIcon_ImageView"
        android:layout_width="58.0dip"
        android:layout_height="58.0dip"
        android:layout_marginBottom="7dip"
        android:layout_marginTop="7dip"
        android:adjustViewBounds="true"
        android:padding="5.0dip"
        android:scaleType="fitCenter"
        android:src="@null" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/offer_adName_TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF040404"
            android:textSize="15sp" android:singleLine="true" android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/offer_adDescription_TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#FF424242"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/offer_freeDownload_TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#FFFF9600"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/offer_control_Layout"
        android:layout_width="85dip"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" android:layout_marginRight="15dip">

        <TextView
            android:id="@+id/offer_adScore_TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingTop="7dip" android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/offer_adDownloadBtn"
            android:layout_width="75dip"
            android:layout_height="26dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/winad_offer_list_button_bg"
            android:gravity="center"
            android:textColor="#FF000000" />

        <TextView
            android:id="@+id/offer_adInstallBtn"
            android:layout_width="75dip"
            android:layout_height="26dip"
            android:layout_marginLeft="5dip"
      
            android:background="@drawable/winad_offer_list_button_bg"
            android:gravity="center"
            android:textColor="#FF000000"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>